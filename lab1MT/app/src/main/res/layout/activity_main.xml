<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/ResartBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Restart"
            android:onClick="OnRestartClick"/>

        <androidx.gridlayout.widget.GridLayout
            android:id="@+id/grid"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn6"
                android:layout_width="90dp"
                android:layout_height="145dp"
                app:layout_column="1"
                app:layout_row="1"
                android:onClick="OnClick"/>

            <Button
                android:id="@+id/btn5"
                android:layout_width="90dp"
                android:layout_height="145dp"
                app:layout_column="0"
                app:layout_row="1"
                android:onClick="OnClick"/>

            <Button
                android:id="@+id/btn7"
                android:layout_width="90dp"
                android:layout_height="145dp"
                app:layout_column="2"
                app:layout_row="1"
                android:onClick="OnClick"/>

            <Button
                android:id="@+id/btn8"
                android:layout_width="90dp"
                android:layout_height="145dp"
                app:layout_column="3"
                app:layout_row="1"
                android:onClick="OnClick"/>

            <Button
                android:id="@+id/btn1"
                android:layout_width="90dp"
                android:layout_height="145dp"
                app:layout_column="0"
                app:layout_row="0"
                android:onClick="OnClick"/>

            <Button
                android:id="@+id/btn9"
                android:layout_width="90dp"
                android:layout_height="145dp"
                app:layout_column="0"
                app:layout_row="2"
                android:onClick="OnClick"/>

            <Button
                android:id="@+id/btn10"
                android:layout_width="90dp"
                android:layout_height="145dp"
                app:layout_column="1"
                app:layout_row="2"
                android:onClick="OnClick"/>

            <Button
                android:id="@+id/btn11"
                android:layout_width="90dp"
                android:layout_height="145dp"
                app:layout_column="2"
                app:layout_row="2"
                android:onClick="OnClick"/>

            <Button
                android:id="@+id/btn12"
                android:layout_width="90dp"
                android:layout_height="145dp"
                app:layout_column="3"
                app:layout_row="2"
                android:onClick="OnClick"/>

            <Button
                android:id="@+id/btn2"
                android:layout_width="90dp"
                android:layout_height="145dp"
                app:layout_column="1"
                app:layout_row="0"
                android:onClick="OnClick"/>

            <Button
                android:id="@+id/btn3"
                android:layout_width="90dp"
                android:layout_height="145dp"
                app:layout_column="2"
                app:layout_row="0"
                android:onClick="OnClick"/>

            <Button
                android:id="@+id/btn4"
                android:layout_width="90dp"
                android:layout_height="145dp"
                app:layout_column="3"
                app:layout_row="0"
                android:onClick="OnClick"/>
        </androidx.gridlayout.widget.GridLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>